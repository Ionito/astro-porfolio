---
import Section from "@/components/Section.astro";
import cv from "@/cv";
const { skills } = cv;
---

<Section title="Skills">
  <ul>
    {skills.map(({ name }) => <li>{name}</li>)}
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }
  li {
    border-radius: 6px;
    color: white;
    padding: 4px;
    padding-inline: 18px;
    background: #aaa;
  }

  @media print {
    li {
      background-color: white;
      color: black;
      border: 1px solid black;
    }
  }
</style>
