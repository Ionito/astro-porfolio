---
interface Props {
  json: { name: string }[];
}

const { json: skills } = Astro.props;
---

<ul>
  {skills.map(({ name }) => <li>{name}</li>)}
</ul>

<style>
  ul {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }
  li {
    border-radius: 6px;
    color: white;
    padding: 4px;
    padding-inline: 18px;
    background: #aaa;
  }

  @media print {
    li {
      background-color: white;
      color: black;
      border: 1px solid black;
    }
  }
</style>
