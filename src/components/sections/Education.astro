---
const { json: education } = Astro.props;

interface Props {
  json: {
    institution: string;
    area: string;
    startDate: string;
    endDate: string | null;
  }[];
}
---

<ul>
  {
    education.map(({ institution, startDate, endDate, area }) => {
      const startYear = new Date(startDate).getFullYear();
      const endYear =
        endDate !== null ? new Date(endDate).getFullYear() : "PRESENTE";
      return (
        <li>
          <div class="header">
            <h3>{institution}</h3>

            <span class="dates">
              {startYear} - {endYear}
            </span>
          </div>
          <p>{area}</p>
        </li>
      );
    })
  }
</ul>

<style>
  li {
    margin-bottom: 1rem;
    display: flex;
    flex-direction: column;
    gap: 2px;
  }
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 10px;
    .dates {
      font-size: 0.8rem;
      color: #888;
    }
  }
</style>
